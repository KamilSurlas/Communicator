@page
@model Communicator.Models.EditUserViewModel
<h1>Edit Your data</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="mt-3">                
            <div class="row">
                <div class="col-6">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-floating mb-3">
                        <label asp-for="Name" class="control-label">Your Name</label>
                        <input asp-for="Name" class="form-control"/>                     
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input asp-for="LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="lastname" />
                        <label asp-for="LastName">Your Last Name</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input asp-for="City" class="form-control" autocomplete="city" aria-required="true" placeholder="city" />
                        <label asp-for="City">City</label>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Country" class="form-control" autocomplete="country" aria-required="true" placeholder="country" />
                        <label asp-for="Country">Country</label>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input asp-for="PhoneNumber" class="form-control" autocomplete="phonenumber" aria-required="true" placeholder="phonenumber" />
                        <label asp-for="PhoneNumber">Phone Number</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Age" class="form-control" autocomplete="age" aria-required="true" placeholder="age" min="1" />
                        <label asp-for="Age">Age</label>
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
            </div>         
            <div class="form-floating mb-3">
                <input asp-for="Nick" class="form-control" autocomplete="nick" aria-required="true" placeholder="nick" />
                <label asp-for="Nick">Nick</label>
                <span asp-validation-for="Nick" class="text-danger"></span>
            </div>      
            <button id="updateUserData" type="submit" class="w-100 btn btn-lg btn-primary">Save Changes</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
    </div>
</div>


