@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> _userManager;
@model Correspondence

<!DOCTYPE html>
<html>
<head>
</head>
<body>
   
    <h1>Chat with @Model.Receiver.Name @Model.Receiver.LastName [@Model.Receiver.Nick]</h1>
    <div id="chat">
        <ul id="messages">
            @if (Model.Messages != null)
            {
                @foreach (var message in Model.Messages)
                {

                    <li>
                        @if (message.Sender.Id == _userManager.GetUserId(User))
                        {
                            <p>You:</p>
                        }
                        else
                        {
                            <p>@message.Sender.Name:</p>
                        }

                        <p>@message.Content</p>
                        sent at: @message.SendingTime
                    </li>
                }
            }
           
        </ul>
    </div>
    <form id="sendMessage">     
        <input type="text" id="messageInput" name="messageInput" placehoolder="Write message" />
        <button id="sendButton">Send</button>
    </form>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(function () {
                $("#sendButton").click(function (e) {
                    e.preventDefault();

                    var messageInput = $("#messageInput").val();
                    var correspondenceId = @Model.Id;

                    $.ajax({
                        url: "@Url.Action("SaveMessage", "Correspondence")",
                        type: "POST",
                        data: { content: messageInput, correspondenceId: correspondenceId },
                       
                    });
                });
            });
        </script>
    }
      
  
      

            
