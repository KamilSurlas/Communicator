    <form id="sendMessage">
        <input type="hidden" asp-for="Id" />
        <input type="text" id="messageInput" name="messageInput" placehoolder="Write message" />
        <button id="sendButton">Send</button>
    </form>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(function () {
                $("#sendButton").click(function (e) {
                    e.preventDefault();

                    var messageInput = $("#messageInput").val();
                    var correspondenceId = @Model.Id;

                    $.ajax({
                        url: "@Url.Action("SaveMessage", "Correspondence")",
                        type: "POST",
                        data: { content: messageInput, correspondenceId: correspondenceId },
                        success: function (data) {
                            // Obsłuż sukces, na przykład zaktualizuj widok z nową wiadomością
                            $("#messages").append('<li>@Model.Sender.Name says: ' + data.content + '</li>');
                            $("#messageInput").val('');
                        },
                        error: function (error) {
                            console.error('Błąd podczas zapisywania wiadomości: ' + error.responseText);
                        }
                    });
                });
            });
        </script>
    }
      
  
      

            
